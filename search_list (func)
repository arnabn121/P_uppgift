def search_list():
    global list_number
    f = open("names_file.txt", "r+", encoding="utf-8")
    names_of_lists = f.readlines()

    names_of_lists2 = []
    for item in names_of_lists:
        stripped_item = item.strip()
        names_of_lists2.append(stripped_item)

    # print(names_of_lists2)
    search_word = input("Visa lista! \n"
                        "Vilket namn på lista letar du efter?: ").upper()

    matching_words = []
    index_of_matching_words = []

    n = 1
    for i in names_of_lists2:

        if search_word in i:
            matching_words.append(i)
            index_of_matching_words.append(n)
            n += 1

    #print(len(matching_words))
    if len(matching_words) == 0:
        print(search_word + " listan existerar inte")

    if len(matching_words) == 1:
        with open(matching_words[0] + ".txt", "r+", encoding="utf-8") as f:
            file = f.readlines()
        items = []
        for item in file:
            items.append(item.strip())

        print(items)

    if len(matching_words) > 1:
        print("Det finns flera listor som matchar din sökning:")
        k = 1
        for j in matching_words:
            print(str(k) + ". " + j)
            k += 1
        list_number = 0
        while True:
            try:
                list_number = int(input("Ange siffran på listan du vill se: "))
            except ValueError:
                print("Felaktig input, försök igen")
                continue
            if list_number < 1 or list_number > len(matching_words):
                print("Felaktig input")
                continue
            break

    ## with open(str(matching_words[list_number - 1]), "r+", encoding="utf-8") as f:
    ##     file = f.readlines()
    ##
    ## for i in file:
    ##     print(i)

    ## with open(str(matching_words[list_number-1]+".txt", "r+", encoding= "utf-8") as f:
    ##    file = f.readlines()
